FROM dhi.io/node:24-alpine3.23-dev

# Install build dependencies for native modules (better-sqlite3) and runtime tools
RUN apk add --no-cache python3 make g++ dumb-init su-exec tcpdump wget

WORKDIR /app

COPY package.json package-lock.json ./
COPY backend/package.json ./backend/
RUN npm ci -w backend

COPY backend/ backend/

RUN mkdir -p /app/data && chown -R node:node /app

ENV NODE_ENV=development
ENV PORT=3051

EXPOSE 3051

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD wget --spider --quiet http://127.0.0.1:3051/health || exit 1

ENTRYPOINT ["dumb-init", "--", "/app/backend/docker-entrypoint.sh"]
CMD ["npx", "tsx", "watch", "backend/src/index.ts"]
