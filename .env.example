# Auth
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme123
JWT_SECRET=generate-a-random-64-char-string

# Portainer
PORTAINER_API_URL=https://your-portainer.example.com
PORTAINER_API_KEY=your-api-key
PORTAINER_VERIFY_SSL=true

# Ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# Kibana (optional)
# KIBANA_ENDPOINT=https://your-kibana.example.com
# KIBANA_API_KEY=your-kibana-key

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL_MINUTES=5

# Metrics Collection
METRICS_COLLECTION_ENABLED=true
METRICS_COLLECTION_INTERVAL_SECONDS=60
METRICS_RETENTION_DAYS=7

# Anomaly Detection
ANOMALY_ZSCORE_THRESHOLD=2.5
ANOMALY_MOVING_AVERAGE_WINDOW=30
ANOMALY_MIN_SAMPLES=10

# Cache
CACHE_ENABLED=true
CACHE_TTL_SECONDS=900

# Server
PORT=3001
LOG_LEVEL=info
SQLITE_PATH=./data/dashboard.db
