{
  "name": "@dashboard/infrastructure",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Edge agent capabilities, async log collection, Docker frame decoding, and Elasticsearch log forwarding",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./routes/index.js": {
      "import": "./dist/routes/index.js",
      "types": "./dist/routes/index.d.ts"
    },
    "./services/*.js": {
      "import": "./dist/services/*.js",
      "types": "./dist/services/*.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@dashboard/contracts": "*",
    "@dashboard/core": "*",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^6.1.0",
    "undici": "^7.22.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.3",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
