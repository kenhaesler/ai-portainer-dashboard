{
  "name": "ai-portainer-dashboard",
  "version": "2.0.0",
  "private": true,
  "description": "AI-powered Portainer container operations platform",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "build": "npm run build -w backend && npm run build -w frontend",
    "lint": "npm run lint:bash && npm run lint -w backend && npm run lint -w frontend",
    "lint:bash": "bash scripts/lint-bash.sh",
    "typecheck": "npm run typecheck -w backend && npm run typecheck -w frontend",
    "test": "npm run test -w backend && npm run test -w frontend",
    "loadtest:build": "docker compose -f docker/docker-compose.loadtest.yml build",
    "loadtest:rest": "docker compose -f docker/docker-compose.loadtest.yml run --rm rest",
    "loadtest:socketio": "docker compose -f docker/docker-compose.loadtest.yml run --rm socketio",
    "loadtest:bench": "docker compose -f docker/docker-compose.loadtest.yml run --rm bench",
    "loadtest:llm": "docker compose -f docker/docker-compose.loadtest.yml run --rm llm",
    "loadtest:all": "docker compose -f docker/docker-compose.loadtest.yml run --rm all",
    "test:e2e": "npx playwright test",
    "test:integration": "npm run test -w backend && npm run test -w frontend && npm run test:e2e",
    "audit:prod": "npm audit --omit=dev --audit-level=high",
    "audit:all": "npm audit --audit-level=critical",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^9.1.0",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
